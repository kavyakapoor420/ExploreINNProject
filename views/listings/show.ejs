<% layout("../layouts/boilerplate") %>

<body>
    <h3 id="l2">Listing details</h3>
    <ul>
      <li>Owned by <%=listing.owner.username%></li>
        <li><%= listing.title %></li>
        <li><%= listing.description %></li>
        <li>&#8377;<%= listing.price.toLocaleString("en-IN") %> per night</li>
        <li><%= listing.location %></li>
        <li><%= listing.country %></li> 
    </ul>  
    <br />
    <% if(currentUser && currentUser._id.equals(listing.owner._id)) {%>  
    <a href="/listings/<%= listing._id %>/edit">Edit this Listing</a>
    <br /><br />
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button>Delete this listing</button>
    </form>
    <% } %>

      <div>
        <h2>Where you'll be</h3>
          <!-- <p><%=listingCoordinates%></p> -->
        <br>
        <div id="map"></div>
      </div>
      
      <script>
      const mapToken = "<%=process.env.MAP_TOKEN%>";
      const coordinates = JSON.parse("<%-listingCoordinates%>");
      mapboxgl.accessToken = mapToken;
        const map = new mapboxgl.Map({
            container: "map", // container ID
            center: coordinates, // starting position [lng, lat]
            zoom: 13.1 // starting zoom
        });
        const marker1 = new mapboxgl.Marker({color:"red"})
        .setLngLat(coordinates)
        .addTo(map);

      </script>
      

    <h2 style="margin-top: 2rem;">Reviews & Ratings </h3>
    <br>
    <% if(listing.review.length==0){%>
      <h5 style="margin-left: 1rem;">No reviews yet...</h4>
      <%}%>
    <div>
    <div>
      <ul>
      <% for(review of listing.review) { %>
        
        <li style="font-size: x-large;"> <h3>@<%=review.author.username%></h5><p class="starability-result" data-rating=<%=review.rating%>> Rated: 3 stars</p> <%=review.comment%>    </li>
          <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
        <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
          <button class="btn btn-sm btn-dark">Delete review</button>
          <br><br>
      </form>
      
        <%}%>
     <% }%>
    </ul>
    </div>
    <br><br>

    <% if(currentUser){ %>
    <div>
    <h4 style="margin-top: 2rem ; margin-bottom: 1rem;">Leave a Review</h4>
    <form method="post" action="/listings/<%=listing._id %>/reviews">
    <div>
    <label for="rating" class="form-label">Rating</label>
    <!-- <input type="range" min="1" max="5" id="rating" name="review[rating]"> -->
    <fieldset class="starability-grow">
      <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1 " checked aria-label="No rating." />
      <input type="radio" id="first-rate1" name="review[rating]" value="1" />
      <label for="first-rate1" title="Terrible">1 star</label>
      <input type="radio" id="first-rate2" name="review[rating]" value="2" />
      <label for="first-rate2" title="Not good">2 stars</label>
      <input type="radio" id="first-rate3" name="review[rating]" value="3" />
      <label for="first-rate3" title="Average">3 stars</label>
      <input type="radio" id="first-rate4" name="review[rating]" value="4" />
      <label for="first-rate4" title="Very good">4 stars</label>
      <input type="radio" id="first-rate5" name="review[rating]" value="5" />
      <label for="first-rate5" title="Amazing">5 stars</label>
    </fieldset>
  </div>
    <div>
    <label for="comment" class="form-label">Comments</label>
    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
    
    </div>
    <button style="margin-top: 1rem;">Submit</button>
  </form>
  <br>
  <% }else { %>
    <br><br>
    <div >
      <h4 style="margin-bottom: 2rem;">Login to give a Review</h4>
    </div>
    <%}%>
 
</div>

</body>

