<% layout("../layouts/boilerplate") %>

<body>
    <h3 id="l2">Listing details</h3>
    <ul>
      <li>Owned by <%=listing.owner.username%></li>
        <li><%= listing.title %></li>
        <li><%= listing.description %></li>
        <li>&#8377;<%= listing.price.toLocaleString("en-IN") %> per night</li>
        <li><%= listing.location %></li>
        <li><%= listing.country %></li> 
    </ul>  
    <br />
    <% if(currentUser && currentUser._id.equals(listing.owner._id)) {%>  
    <a href="/listings/<%= listing._id %>/edit">Edit this Listing</a>
    <br /><br />
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button>Delete this listing</button>
    </form>
    <% } %>
    <h2 style="margin-top: 2rem;">Reviews & Ratings </h3>
    <br>
    <% if(listing.review.length==0){%>
      <h5 style="margin-left: 1rem;">No reviews yet...</h4>
      <%}%>
    <div>
    <div>
      <ul>
      <% for(review of listing.review) { %>
        
        <li style="font-size: x-large;"> <h3>@<%=review.author.username%></h5> <%=review.comment%> , <%=review.rating%> star</li>
          <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
        <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
          <button class="btn btn-sm btn-dark">Delete review</button>
      </form>
        <%}%>
     <% }%>
    </ul>
    </div>

    <% if(currentUser){ %>
    <div>
    <h4 style="margin-top: 2rem ; margin-bottom: 1rem;">Leave a Review</h4>
    <form method="post" action="/listings/<%=listing._id %>/reviews">
    <div>
    <label for="rating" class="form-label">Rating</label>
    <input type="range" min="1" max="5" id="rating" name="review[rating]">
    </div>
    <div>
    <label for="comment" class="form-label">Comments</label>
    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
    
    </div>
    <button style="margin-top: 1rem;">Submit</button>
  </form>
  <br>
  <% }else { %>
    <br><br>
    <div >
      <h4 style="margin-bottom: 2rem;">Login to give a Review</h4>
    </div>
    <%}%>
 
</div>

</body>
